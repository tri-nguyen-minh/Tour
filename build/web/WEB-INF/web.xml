<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
<!--    <listener>
        <listener-class>net.codejava.servlet.ContextListener</listener-class>
    </listener>-->
    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>trinm.filter.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <display-name>AccountController</display-name>
        <servlet-name>AccountController</servlet-name>
        <servlet-class>trinm.controllers.AccountController</servlet-class>
    </servlet>
    <servlet>
        <display-name>TourSearchController</display-name>
        <servlet-name>TourSearchController</servlet-name>
        <servlet-class>trinm.controllers.TourSearchController</servlet-class>
    </servlet>
    <servlet>
        <display-name>TourCreateController</display-name>
        <servlet-name>TourCreateController</servlet-name>
        <servlet-class>trinm.controllers.TourCreateController</servlet-class>
    </servlet>
    <servlet>
        <display-name>BookingController</display-name>
        <servlet-name>BookingController</servlet-name>
        <servlet-class>trinm.controllers.BookingController</servlet-class>
    </servlet>
    <servlet>
        <display-name>LogoutController</display-name>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>trinm.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/AccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TourSearchController</servlet-name>
        <url-pattern>/TourSearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TourCreateController</servlet-name>
        <url-pattern>/TourCreateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingController</servlet-name>
        <url-pattern>/BookingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--    <welcome-file-list>
        <welcome-file>TourSearchController</welcome-file>
    </welcome-file-list>-->
    <error-page>
        <error-code>404</error-code>
        <location>/errorPage.jsp</location>
    </error-page>
    <resource-ref>
        <res-ref-name>DBConnect</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
